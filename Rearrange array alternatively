 void rearrange(long long *arr, int n) 
    { 
    	
    	// Your code here
    	vector<int> vec;
    	int i=0;
    	int j=n-1;
    	while(i<=j)
    	{
    	    vec.push_back(arr[j]);
    	    vec.push_back(arr[i]);
    	    i++;
    	    j--;
    	}
    	for(int i=0;i<vec.size();i++)
        {
             arr[i]=vec[i];
        }
    	
    	 
    }
